{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"lib": [
			"ES6"
		],
		"outDir": "out",
		"rootDir": "src",
		"strict": true, // Enable strict mode
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
